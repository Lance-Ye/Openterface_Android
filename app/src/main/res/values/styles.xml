    <resources>

    <style name="ArrowFloatingActionButton">
        <item name="fabCustomSize">0.1dp</item>
        <item name="fabSize">mini</item>
    </style>

    <style name="MainFloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">5dp</item>
        <item name="fabSize">mini</item>
        <item name="pressedTranslationZ">10dp</item>
        <item name="tint">@color/white</item>
        <item name="android:backgroundTint">#80000000</item>
    </style>

    <style name="CameraViewDragButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">5dp</item>
        <item name="fabSize">mini</item>
        <item name="pressedTranslationZ">10dp</item>
        <item name="tint">@color/white</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="TransparentDialogFragment" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Theme.Usbvideo.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
        <item name="exampleColor">@color/light_blue_400</item>
    </style>

    <style name="FragmentVideoFormatLabelText" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>

    <style name="FragmentVideoFormatOptionSpinner" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FragmentCameraControlsTextLeft" parent="">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/gray_400</item>
    </style>

    <style name="FragmentCameraControlsSeekBar" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="isb_show_indicator">none</item>
        <item name="isb_show_thumb_text">true</item>
        <!--        <item name="isb_show_tick_texts">true</item>-->
        <item name="isb_ticks_count">2</item>
        <item name="isb_thumb_color">@color/white</item>
        <item name="isb_thumb_text_color">@color/white</item>
        <item name="isb_track_progress_color">@color/white</item>
    </style>

    <style name="FragmentCameraControlsAutoCheckBox" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleX">0.7</item>
        <item name="android:scaleY">0.7</item>
        <item name="android:textColor">@color/gray_400</item>
    </style>

    <style name="FragmentCameraControlsRadioButton" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FragmentCameraControlsBottomButton" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#00000000</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonTextStyle">
        <item name="android:textAllCaps">false</item>
<!--        <item name="android:textSize">16sp</item>-->
<!--        <item name="android:textColor">@color/black</item>-->
    </style>

    <style name="My_CheckBox2" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/RED</item>
        <item name="android:colorControlNormal">@color/black</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

</resources>