<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:alpha="0.7"
    android:layout_gravity="end"
    android:layout_margin="0.1dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="1dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="this is drawerLayout"
                android:textColor="@color/white"
                android:layout_margin="1dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/buttonLayout"
                android:layout_width="250dp"
                android:layout_height="wrap_content">

                <android.widget.Button
                    android:id="@+id/Abs_ctrl_default_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="1dp"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/baseline_ads_click_24"
                    android:text="@string/KeyMouse_Abs_Ctrl"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/drawerButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginHorizontal="1dp"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/baseline_keyboard_arrow_left_24"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/optionLayout"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/optionA"
                    style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:theme="@style/My_CheckBox2"
                    android:background="@color/white"
                    android:text="test"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/optionB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Option B" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.widget.Button
                    android:id="@+id/Abs_ctrl_drag_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="1dp"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/baseline_ads_click_24"
                    android:text="@string/KeyMouse_Abs_Drag_Ctrl"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>